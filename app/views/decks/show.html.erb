<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @deck.name %>
</p>

<p>
  <b>Description:</b>
  <%= @deck.description %>
</p>

<ol>
<% @deck.cards.each do |card| %>
  <li>
    Name: <%= link_to card.name, card_path(card.id) %><br>
    Strength: <%= card.strength %>
  </li>
<% end %>
</ol>

<%= link_to 'Edit', edit_deck_path(@deck) %> |
<%= link_to 'Back', decks_path %>
